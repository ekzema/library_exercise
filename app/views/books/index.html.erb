<p id="notice"><%= notice %></p>

<h1>Books</h1>
<%= link_to 'New Book', new_book_path if user_is_admin? %>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Status</th>
     <%= content_tag(:th, 'Actions') if user_is_admin?  %>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <th scope="row"><%= book.name %></th>
      <td><%= book.author %></td>
      <td><%= book.status %></td>
      <% if user_is_admin?  %>
        <td>
          <%= link_to 'Show', book %> |
          <%= link_to 'Edit', edit_book_path(book) %> |
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

